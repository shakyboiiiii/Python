import math
class Circle:
    def __init__(self, radius):
        if not isinstance(radius, (int, float)) or radius < 0:
            raise ValueError("Radius must be a non-negative number.")
        self.radius = radius
    def area(self):
        return math.pi * (self.radius ** 2)
    def perimeter(self):
        return 2 * math.pi * self.radius
if __name__ == "__main__":
    my_circle = Circle(5)
    circle_area = my_circle.area()
    print(f"The area of the circle with radius {my_circle.radius} is: {circle_area:.2f}")
    circle_perimeter = my_circle.perimeter()
    print(f"The perimeter of the circle with radius {my_circle.radius} is: {circle_perimeter:.2f}")
    another_circle = Circle(10.5)
    print(f"\nFor a circle with radius {another_circle.radius}:")
    print(f"Area: {another_circle.area():.2f}")
    print(f"Perimeter: {another_circle.perimeter():.2f}")
    try:
        invalid_circle = Circle(-2)
    except ValueError as e:
        print(f"\nError creating circle: {e}")
